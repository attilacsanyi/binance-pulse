{
  // Files
  "files.exclude": {
    ".git": true,
    ".DS_Store": true
  },

  // Search
  "search.exclude": {
    ".vscode": true,
    ".nx": true,
    "dist": true,
    "node_modules": true,
    "*lock.*": true,
    "*.svg": true
  },
  // Typescript
  "typescript.tsdk": "node_modules/typescript/lib",
  // Editor
  "window.title": "${rootName}${separator}${activeEditorLong} ${dirty}",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // via Prettier plugin
    "source.organizeImports": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always"
  },
  "editor.formatOnSave": true,
  "editor.foldingImportsByDefault": false,
  "nxConsole.generateAiAgentRules": true,
  "todo-tree.general.tags": ["TODO", "FIXME", "console.log"],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "note",
      "type": "line",
      "foreground": "#6EEB83",
      "iconColour": "#6EEB83",
      "gutterIcon": true
    },
    "FIXME": {
      "icon": "bug",
      "type": "line",
      "foreground": "#FFB347",
      "iconColour": "#FFB347",
      "gutterIcon": true
    },
    "console.log": {
      "icon": "pencil",
      "type": "line",
      "foreground": "#FFE761",
      "iconColour": "#FFE761",
      "gutterIcon": true
    }
  }
}
